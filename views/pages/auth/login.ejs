<!DOCTYPE html>
<html lang="en">
	<%- include('../../partials/head.ejs'); %>
	<body>
		<%- include('../../partials/nav.ejs'); %> <%-
		include('../../partials/flash.ejs'); %>

		<div class="container">
			<div class="row m-5">
				<div class="col-sm-6 offset-sm-3 offset-0">
					<div class="card card-body">
						<h2 class="text-center m-4">Log in to your account</h2>
						<form action="/login" method="POST">
							<input
								type="email"
								name="email"
								id="email"
								placeholder="Give an registered Email"
								class="form-control"
							/>
							<input
								type="password"
								name="password"
								id="password"
								placeholder="Type your password"
								class="form-control"
							/>
							<% if (error) { %>
							<p class="text-danger text-center">
								Error Occurred! Please try again
							</p>
							<% } %>

							<input
								class="btn btn-warning btn-100 btn-sm px-3"
								type="submit"
								value="Submit"
							/>
						</form>
						<p style="font-size: 1rem">
							Don't have an account? <a href="/signup">create here</a>
						</p>
					</div>
				</div>
			</div>
		</div>

		<%- include('../../partials/footer.ejs'); %>
	</body>
</html>
