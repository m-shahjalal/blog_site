<!DOCTYPE html>
<html lang="en">
	<%- include('../../partials/head.ejs'); %>
	<body>
		<%- include('../../partials/nav.ejs'); %> <%-
		include('../../partials/flash.ejs'); %>

		<div class="container">
			<div class="row m-5">
				<div class="col-sm-6 offset-3">
					<div class="card card-body">
						<h2 class="text-center m-4">Registration your account</h2>
						<form action="/signup" method="POST">
							<div class="form-group">
								<input
									type="text"
									id="name"
									name="name"
									placeholder="Type your Name"
									class="form-control <%= error.name ? 'is-invalid' : '' %>"
									value=" <%= value.name && value.name %>"
								/>
								<div class="error-feedback"><%= error.name %></div>
							</div>
							<div class="form-group">
								<input
									type="email"
									name="email"
									id="email"
									placeholder="Give an authentic Email"
									class="form-control <%= error.email ? 'is-invalid' : '' %>"
									value=" <%= value.email && value.email %>"
								/>
								<div class="error-feedback"><%= error.email %></div>
							</div>
							<div class="form-group">
								<input
									type="password"
									name="password"
									id="password"
									placeholder="Type a unique password"
									class="form-control <%= error.password ? 'is-invalid' : '' %>"
								/>
								<div class="error-feedback"><%= error.password %></div>
							</div>
							<div class="form-group">
								<input
									type="password"
									name="confirmPassword"
									id="confirmPassword"
									placeholder="Confirm the password"
									class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %>"
								/>
								<div class="error-feedback"><%= error.confirmPassword %></div>
							</div>

							<input
								class="btn btn-warning btn-100 btn-sm px-3"
								type="submit"
								value="Submit"
							/>
						</form>
						<p style="font-size: 1rem">
							Already have an account? <a href="/login">login here</a>
						</p>
					</div>
				</div>
			</div>
		</div>

		<%- include('../../partials/footer.ejs'); %>
	</body>
</html>
